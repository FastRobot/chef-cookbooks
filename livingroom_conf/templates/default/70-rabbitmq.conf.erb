module(load="imfile" PollingInterval="10")

input(type="imfile"
      File="/var/log/rabbitmq/rabbit@<%= @hostname %>.log"
      Tag="rabbitmq"
      Severity="error"
      Facility="local7")

      $template Logentries, "<%= @logentries_token %> %HOSTNAME% %syslogtag%%msg%\n"

:syslogtag, contains, "rabbitmq"
*.* @@data.logentries.com:80;Logentries

